{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true, // Enable decorators
        "emitDecoratorMetadata": true, // Required for TypeORM decorators
        "moduleResolution": "node" // Ensure proper module resolution
    },
    "exclude": ["jest.config.ts"] // Exclude jest.config.ts from compilation
}